@model List<UA5_Restaurant_App.Models.MenuFormModel>



<div class="col-12 p-0 m-0 bg-white sticky-top">
    <div class="col-md-9 ">
        <nav id="menu-navbar" class="nav-menu">
            <ul class="nav nav-tabs">
                <li class="nav-item "><a class="nav-link active" href="#Starters">Starters</a></li>
                <li class="nav-item"><a class="nav-link" href="#Mains">Mains</a></li>
                <li class="nav-item"><a class="nav-link" href="#Desserts">Desserts</a></li>
                <li class="nav-item"><a class="nav-link" href="#Sides">Sides</a></li>
