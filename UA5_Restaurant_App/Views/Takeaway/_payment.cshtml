<form role="form" id="paymentForm" class="d-flex flex-column p-0 m-0 gap-2">
    <div class="modal fade" id="paymentModal" tabindex="-1" role="dialog" aria-labelledby="paymentModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header pb-0 border-0">
                    <h5 class="modal-title mb-4 display-6 w-100" id="paymentModallLabel">Enter delivery details</h5>
                    <button type="button" class="close p-0 pb-3 m-auto paymentButton" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body pt-0">
                    <div class="form-group">
                    </div>
                    <button type="button" class="btn btn-secondary d-flex border w-100" id="savepaymentButton">
                        <i class="fa-solid fa-cart-shopping m-auto ms-0" aria-hidden="true"></i>
                        <span class="me-auto">payment</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary deliveryButton me-auto">Go back</button>
                    <button type="button" class="btn btn-primary paymentButton ms-auto" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</form>