<!-- Delivery Modal -->
<div class="modal fade" id="deliveryModal" tabindex="-1" role="dialog" aria-labelledby="deliveryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header pb-0 border-0">
                <h5 class="modal-title mb-4 display-6 w-100" id="deliveryModallLabel">Enter delivery details</h5>
                <button type="button" class="close p-0 pb-3 m-auto deliveryButton" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body pt-0">
                <form role="form" id="deliveryForm">
                    <div class="form-group">
                       <div class="col-12 p-0 m-0 my-3 row">
                           <div class="col-6 ps-0 pe-1 m-0">
                                <input id="first_name" placeholder="First Name" type="text" class="form-control" autocomplete="on" />
                           </div>
                            <div class="col-6 pe-0 ps-1 m-0">
                                <input id="last_name" placeholder="Last Name" type="text" class="form-control" autocomplete="on" />
                            </div>
                       </div>
                        <div class="my-3">
                            <input id="email" placeholder="Email address" type="email" class="form-control" autocomplete="on" />
                        </div>
                        <div class="my-3">
                            <input id="autocomplete" autocomplete="off" placeholder="Enter your address" type="text" class="form-control" />
                        </div>

                        <div class="my-3">
                            <input id="postal_town" class="form-control" placeholder="Town/City" />
                        </div>


                        <div class="my-3">
                            <input id="administrative_area_level_2" class="form-control" placeholder="County" />
                        </div>

                        <div class="my-3">
                            <input id="postal_code" class="form-control" placeholder="Postal Code" />
                        </div>

                    </div>
                    <div class="mt-3">
                        <p class="m-0">
                            <strong>Delivery cost: </strong><span id="deliveryCostID">Please enter an address </span>
                        </p>
                        <p class="m-0">
                           <span id="deliveryAvailableID"> </span>
                        </p>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary deliveryButton" data-dismiss="modal">Close</button>
                <button type="button" id="saveDeliveryButton" class="btn btn-secondary">Save Changes</button>
            </div>
        </div>
    </div>
</div>




